@model IEnumerable<MvcBlogPortfolio.Models.Makale>

@helper IcerikKısalt(string metin)
{ 
if (metin.Length > 300)
{
        <p>@metin.Substring(0, 300)</p>
}
else
{
        @metin
}
}
<div class="sidebox widget">
    <h3 class="widget-title section-title">Popüler Makaleler</h3>
    <ul class="post-list">
        @foreach (MvcBlogPortfolio.Models.Makale makale in Model)
        {
            <li>
                <div class="icon-overlay">
                    <a href="~/Makale/Detay/@makale.MakaleId">
                        <img src="@makale.Resim.KucukBoyut" alt="" />
                    </a>
                </div>
                <div class="meta">
                    <h5><a href="~/Makale/Detay/@makale.MakaleId">@makale.Baslik</a></h5>
                    <em>
                        @makale.EklenmeTarihi<span class="comments">
                        <a href="#">@makale.Yorum.Count <i class="icon-chat-1"></i></a>
                    </span>
                </em>
            </div>
        </li>
    }

    </ul>
    <!-- /.post-list -->

</div>
 