@model MvcBlogPortfolio.Models.Makale
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/ckeditor/ckeditor.js"></script>
<script src="~/ckfinder/ckfinder.js"></script>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>

<form action="/Makale/Ekle" method="post" enctype="multipart/form-data">
    <table>
        <tr>
            <td> Başlık:</td>
            <td><input type="text" id="Baslik" name="Baslik" value="" /></td>
        </tr>
        <tr>
            <td>İçerik:</td>

            <td><textarea id="Icerik" name="Icerik"></textarea></td>
        </tr>
        <tr>
            <td>Kategori:</td>
            <td>
                <select id="KategoriID" name="KategoriID">
                    @foreach (MvcBlogPortfolio.Models.Kategori item in ViewBag.Kategoriler)
                    {
                        <option value="@item.KategoriId">@item.KategoriAdi</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td>Resim:</td>
            <td>
                <input type="file" name="resim" value="" />
            </td>
        </tr>


        <tr>
            <td></td>
            <td>
                <input type="submit" name="name" value="Ekle" />
            </td>
        </tr>
    </table>
</form>

<script type="text/javascript">
    var editor = CKEDITOR.replace('Icerik');
    CKFinder.setupCKEditor(editor, '/ckfinder/');
</script>